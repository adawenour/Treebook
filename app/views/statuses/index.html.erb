<div class="page-header">
  <h1>All of the statuses</h1>
</div>

<%= link_to "Post New Status", new_status_path, class: "btn btn-info" %>

    <% @statuses.each do |status| %>
    <div class="status">

      <div class="span1">

    
    <strong>Profile <%= link_to status.user.profile_name, status.user %></strong>
      <p><%= status.content %></P>
    
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class"admin">
          <% if status.user == current_user %>
          | <%= link_to 'Edit', edit_status_path(status) %> |
          <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </span>
      </div>
    </div>
    </div>
  <% end %>
     
