
<div class="page-header">
<h1><%= @user.profile_name %></h1>
</div>

    <%= image_tag @user.image.url %>

<p>
<div class="row">
<div class="col-md-4">
<div div class="well well-sm">
<p><strong>Name</strong></p> <%= @user.profile_name %>
<p><strong>User</strong></p> <%= link_to user_path(@user) %> 
