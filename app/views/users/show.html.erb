</div> 
</div>
</div>


  
  <div class="page-header">
  <h1>All of your statuses</h1>
</div>

<%= link_to "Post New Status", new_status_path, class: "btn btn-info" %>

    <% @statuses.each do |status| %>
    <div class="status">


      <p><%= status.user.try(:profile_name) %></P>
      <p><%= status.content %></P>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class"admin">
      
          | <%= link_to 'Edit', edit_status_path(status) %> |
          <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
    

        </span>
      </div>
    </div>
  <% end %>
     

 






